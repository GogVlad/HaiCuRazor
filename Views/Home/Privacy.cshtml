<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Internship Landpage</title>
</head>
<body>
    @section scripts {
        <script type="text/javascript" src="~/js/default.js"></script>
    }
    <h1>Internship Landpage</h1>
    <p>Here is our classroom</p>

    <ul id="list">
        @for (var i = 0; i < Model.Members.Count; i++)
        {
            var member = Model.Members[i];

            <li class="member">
                @member
            </li>
        }
    </ul>

    <input id="newcomer" title="Name" type="text" />
    <button id="add" class="btn btn-primary">Add new commer</button>
    <button id="clear" class="btn btn-secondary"> Clear</button>
    <p><img src="/Images/GoodCodeRules.jfif" /></p>
</body>
</html>
